<Window x:Class="TelaLogin.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelaLogin"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800" Background="#FF191819">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Label Grid.Column="3" Content="BEM BINDO A TELA DE CADASTRO DE SENHAS &#xD;&#xA;DESEJA CADASTRAR ALGUMA?" Grid.Row="1" Grid.RowSpan="2"  Grid.ColumnSpan="4" Margin="4,4,4,4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        
        <Label Grid.Column="1" Content="Nome do local" Margin="4,4,4,4" Grid.Row="3" Grid.ColumnSpan="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="CampoNomeLocal"  Grid.Column="1" Grid.ColumnSpan="3" Margin="4,4,4,4" Grid.Row="4" TextWrapping="Wrap" VerticalContentAlignment="Center" Padding="20, 0, 0, 0"/>
        
        <Label Grid.Column="6" Content="Senha escolhida" Margin="4,4,4,4" Grid.Row="3" Grid.ColumnSpan="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="CampoSenhaEscolhida"  Grid.Column="6" Grid.ColumnSpan="3" Margin="4,4,4,4" Grid.Row="4" TextWrapping="Wrap" VerticalContentAlignment="Center" Padding="20, 0, 0, 0"/>

        <!--<TextBlock Grid.Row="6" Grid.Column="1" Text="TEste de quantidade de senhas salvas" Grid.ColumnSpan="3"/> -->
        <Button x:Name="BotaoEnvioSenha" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="8"  Content="SALVAR" Margin="4,4,4,4" Click="EnvioSenha"/>
    </Grid>

</Window>
